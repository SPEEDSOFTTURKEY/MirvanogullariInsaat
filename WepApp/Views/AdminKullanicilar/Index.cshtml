@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}
<section class="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Hizmetlerimiz Bilgileri
                </header>
                <div class="panel-body">
                    <section id="unseen">
                        <div class="adv-table">
                            <a class="btn btn-primary" href="/AdminKullanicilarEke/"><i class="fa fa-plus" style="padding-right:5px"></i>Ekle</a>
                            <br />
                            <table class="table table-bordered table-striped table-condensed" id="TblVeriler" style="font-size:13px;margin-top:5px">
                                <thead>
                                    <tr>
                                        <th>Kullanıcı Adı</th>
                                        <th>Şifre</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kullanici in ViewBag.KullanicilarList)
                                    {
                                        <tr>
                                            <td>@kullanici.Adi</td>
                                            <td>@kullanici.Sifre</td>

                                            <td>

                                                <a class="btn btn-primary btn-xs" href="/AdminKullanicilar/Guncelleme/@kullanici.Id"><i class="icon-pencil"></i></a>
                                                <a class="btn btn-danger btn-xs" href="/AdminKullanicilar/Sil/@kullanici.Id"><i class="icon-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>
                </div>
            </section>
        </div>
    </div>
</section>