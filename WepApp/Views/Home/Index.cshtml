@using WepApp.Models

@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_LayoutWebUI.cshtml";
}

<!-- Hero Section -->
<section id="hero" class="hero section dark-background">

    <div id="hero-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">

        @{
            var bannerlar = (List<WebApp.Models.AnaSayfaBannerResim>)ViewBag.AnaSayfaBanner;
            var insaatBannerlar = bannerlar.Where(b => b.KategoriId == 1).ToList(); // İnşaat (kategoriId=1)
            var bahcepinarBannerlar = bannerlar.Where(b => b.KategoriId == 0).ToList(); // Bahçepınar Su (kategoriId=0)
            var maxPairs = Math.Min(insaatBannerlar.Count, bahcepinarBannerlar.Count);
        }

        @for (int i = 0; i < maxPairs; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="d-flex w-100 h-100">
                    <!-- Left Side: İnşaat Banner -->
                    <div class="w-50 h-100 position-relative">
                        <img src="@insaatBannerlar[i].FotografBuyuk" class="w-100 h-100" style="object-fit: cover;" alt="İnşaat">
                       
                    </div>
                    <!-- Right Side: Bahçepınar Su Banner -->
                    <div class="w-50 h-100 position-relative">
                        <img src="@bahcepinarBannerlar[i].FotografBuyuk" class="w-100 h-100" style="object-fit: cover;" alt="Bahçepınar Su">
                       
                    </div>
                </div>
            </div>
        }

        @if (maxPairs > 0)
        {
            <a class="carousel-control-prev" href="#hero-carousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
            </a>
            <a class="carousel-control-next" href="#hero-carousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
            </a>
            <ol class="carousel-indicators">
                @for (int i = 0; i < maxPairs; i++)
                {
                    <li data-bs-target="#hero-carousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                }
            </ol>
        }

    </div>

</section><!-- /Hero Section -->
