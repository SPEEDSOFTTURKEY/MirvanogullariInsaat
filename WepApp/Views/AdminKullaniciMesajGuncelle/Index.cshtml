@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}
<section class="wrapper">
    <!-- page start-->
    <div class="row">
        <form class="form-horizontal" action="@Url.Action("Kaydet","AdminKullaniciMesajGuncelle")" method="post">
            <div class="col-md-9">
                <section class="panel">
                    <header class="panel-heading">
                        MESAJ BİLGİLERİ
                    </header>
                    <div class="panel-body">
                        <div class="form">


                            <div class="form-group">
                                <label class="col-sm-2 control-label col-sm-2">Adı Soyadı</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@ViewBag.Mesaj.AdSoyadi" name="AdSoyadi" style="color:#000" />
                                </div>
                                <br />
                                <br />
                                <label class="col-sm-2 control-label col-sm-2">E-posta Adresi</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" value="@ViewBag.Mesaj.Email" name="Email" style="color:#000" />
                                </div>
                                <br />
                                <br />
                                <label class="col-sm-2 control-label col-sm-2">Mesaj</label>
                                <div class="col-sm-10">
                                    <input type="hidden" name="Id" value="@ViewBag.Mesaj.Id" />
                                    <textarea class="form-control ckeditor" name="Mesaj" style="color:#000" rows="24">@ViewBag.Mesaj.Mesaj</textarea>
                                </div>
                            </div>
                            <div class="panel-body text-right">
                                <a href="@Url.Action("Index","AdminAnaSayfa")" class="btn btn-danger"><i class="icon-cancel"></i> İptal</a>
                                <button type="submit" class="btn btn-info "><i class="icon-save"></i> Kaydet</button>

                            </div>

                        </div>

                    </div>

                </section>

            </div>
        </form>
    </div>
</section>

