
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}
<section class="wrapper">
    <!-- page start-->
    <div class="row">
        <form class="form-horizontal" action="@Url.Action("Kaydet","AdminKullanicilarGuncelle")" method="post">
            <div class="col-md-6">
                <section class="panel">
                    <header class="panel-heading">
                        KULLANICI BİLGİLERİ GÜNCELLE
                    </header>
                    <div class="panel-body">
                        <div class="form">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <input type="hidden" name="Id" value="@ViewBag.Kullanicilar.Id" />
                                    <label class="col-sm-6 control-label col-sm-6">Kullanıcı Adı</label>
                                    <input type="text" name="Adi" value="@ViewBag.Kullanicilar.Adi" class="form-control" style="color:#000" />
                                </div>
                                <div class="col-md-12">
                                    <label class="col-sm-6 control-label col-sm-6">Şifre</label>
                                    <input type="text" name="Sifre" value="@ViewBag.Kullanicilar.Sifre" class="form-control" style="color:#000" />
                                </div>

                            </div>
                            <div class="panel-body text-right">
                                <a href="@Url.Action("Index","AdminKullanicilar")" class="btn btn-danger"><i class="icon-cancel"></i> İptal</a>
                                <button type="submit" class="btn btn-info "><i class="icon-save"></i> Kaydet</button>

                            </div>

                        </div>

                    </div>

                </section>

            </div>
        </form>
    </div>
</section>
