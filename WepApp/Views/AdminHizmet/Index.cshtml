@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}
<section class="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                   Hizmet Bilgileri
                </header>
                <div class="panel-body">
                    <section id="unseen">
                        <div class="adv-table">
                            <a class="btn btn-primary" href="/AdminHizmetEkle/"><i class="fa fa-plus" style="padding-right:5px"></i>Ekle</a>
                            <br />
                            <table class="table table-bordered table-striped table-condensed" id="TblVeriler" style="font-size:13px;margin-top:5px">
                                <thead>
                                    <tr>
                                        <th> Başlık</th>
                                        <th>Metin</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <!-- ... (other HTML code) ... -->

                                <tbody>
                                    @foreach (var hakkimizdaBilgileri in ViewBag.Hizmet)
                                    {
                                        <tr>
                                            <td>@hakkimizdaBilgileri.Baslik</td>
                                            <td>@Html.Raw(hakkimizdaBilgileri.Metin)</td>

                                            <td>
                                                <a class="btn btn-primary btn-xs" href="/AdminHizmet/Guncelleme/@hakkimizdaBilgileri.Id"><i class="icon-pencil"></i></a>
                                                <a class="btn btn-danger btn-xs" href="/AdminHizmet/Sil/@hakkimizdaBilgileri.Id"><i class="icon-trash "></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                                <!-- ... (remaining HTML code) ... -->

                            </table>
                        </div>
                    </section>
                </div>
            </section>
        </div>
    </div>
</section>


